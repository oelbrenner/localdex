= form_for @epostcard do |f|
  - if @epostcard.errors.any?
    #error_explanation
      %h2= "#{pluralize(@epostcard.errors.count, "error")} prohibited this epostcard from being saved:"
      %ul
        - @epostcard.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :main_image
    = f.text_area :main_image
  .field
    = f.label :page
    = f.text_field :page
  .actions
    = f.submit 'Save'
