= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    %br/
    = f.email_field :email
  

  .actions
    = f.submit 'Save', class: "btn btn-success"

    = link_to 'Back', users_path, class: "btn btn-info"

